    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CLI",
            "type": "go",
            "request": "launch",
            "args": ["query", "--format", "table", "--columns", "domain", "limes_project_quota"],
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Launch test package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}"
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/main.go",
            "env": { "MAIA_DEBUG": "1" },
            "args": [ "serve" ]
        }
    ]
}